extends layout

block content
    div(class=`card ${cardClass}`)
        h3.title ACME Insurance Co
        div.info-row.name-row
            p.label Name:
            p #{firstName} #{lastName}
        div.info-container
            div.info-row
                p.label Insurance Type
                p #{type}
                div.info-row
                    // getMonth() only goes up to 11, to counter act this, we need to add 1 to the value
                    p.label DOB:
                    p #{dateOfBirth.getMonth()+1}/#{dateOfBirth.getDate()}/#{dateOfBirth.getFullYear()}
        div.info-row
            div
                p.label Address:

            div.address-text
                p #{addressLine1}
                p #{addressLine2}
                p #{city}, #{state}, #{zip}
        div.info-container
            div.info-row
                p.label Acct #:
                p #{accountNumber}
            div.info-row
                p.label Exp.:
                p #{currentDate.getMonth()+1}/#{currentDate.getDate()}/#{currentDate.getFullYear()+4}
                //cards expire 4 years after the cards creation (which just occurred). so we have to add 4 to the
                // getFullYear value
        div
            p.label With you since:
            p #{start.getMonth()+1}/#{start.getDate()}/#{start.getFullYear()}

    br
    a(href="/") Go back